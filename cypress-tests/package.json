{
  "name": "cypress-tests",
  "version": "1.0.0",
  "description": "Test automation with Cypress",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "report:merge": "npx mochawesome-merge cypress/reports/mochawesome/*.json -o cypress/reports/mochawesome/merged-report.json",
    "report:generate": "npx marge cypress/reports/mochawesome/merged-report.json -f report -o cypress/reports/mochawesome/html",
    "report": "npm run test && npm run report:merge && npm run report:generate"
  },
  "keywords": [
    "Automation",
    "Cypress",
    "Testing"
  ],
  "author": "MiRGB",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^14.5.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
