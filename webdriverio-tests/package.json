{
  "name": "webdriverio-tests",
  "version": "1.0.0",
  "description": "Test automation with WebdriverIO",
  "main": "index.js",
  "scripts": {
    "test": "wdio run wdio.conf.js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure": "npm run test && npm run allure:generate && npm run allure:open"
  },
  "keywords": [
    "Automation",
    "WebdriverIO",
    "Testing"
  ],
  "author": "MiRGB",
  "license": "ISC",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.17.0",
    "@wdio/cli": "^9.16.2",
    "@wdio/local-runner": "^9.16.2",
    "@wdio/mocha-framework": "^9.16.2",
    "@wdio/spec-reporter": "^9.16.2",
    "wdio-wait-for": "^3.1.0"
  }
}
